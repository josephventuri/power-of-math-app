{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowLambdaDynamoDBAccess",
      "Effect": "Allow",
      "Action": [
        "dynamodb:PutItem",
        "dynamodb:GetItem",
        "dynamodb:UpdateItem",
        "dynamodb:DeleteItem",
        "dynamodb:Scan",
        "dynamodb:Query"
      ],
      "Resource": "YOUR-TABLE-ARN"
    }
  ]
}
